@model SitePet.Mvc.Models.PetViewModel

@{
    ViewData["Title"] = "Editar as informação do Pet";
}

<h1>@ViewData["Title"]</h1>


<hr />
<div class="row">
    <div class="col-md-7">
        <div class="form-group">
            <label><b>Imagem Atual :</b></label><br />
            <img src="~/Imagens/@Model.Imagem" alt="@Model.Imagem" style="width: 500px; height:300px" />
        </div>
    </div>
    <div class="col-md-5">
        <form enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Raca" class="control-label"></label>
                <input asp-for="Raca" class="form-control" />
                <span asp-validation-for="Raca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label">Cao ou Gato</label><br />
                <input type="radio" value="1" asp-for="Tipo" checked /> Gato
                <input type="radio" value="2" asp-for="Tipo" checked /> Cachorro<br />
            </div>
            <div class="form-group">
                <label asp-for="Genero" class="control-label"></label><br />
                <input type="radio" value="1" asp-for="Genero" checked /> Femea
                <input type="radio" value="2" asp-for="Genero" checked /> Macho<br />
            </div>
            <div class="form-group">
                <label asp-for="Idade" class="control-label" style="width:400px"></label><br />
                <input type="number" asp-for="Idade"  min="1" max="15"class="form-control" style="width:80px"/>
                <span asp-validation-for="Idade" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImagemUpload" class="control-label"></label>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="ImagemUpload" asp-for="ImagemUpload" />
                    <label data-browse="Procurar" style="width: 400px" class="custom-file-label" for="ImagemUpload"></label>
                    <label style="display:none" id="img_nome"></label>
                </div>
                <span asp-validation-for="ImagemUpload" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-info" asp-controller="Pets" asp-action="Index">Voltar</a>
            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $("#ImagemUpload").change(function () {
            $("#img_nome").text(this.files[0].name);
            $("#img_nome")[0].style.display = 'block';
        });
        $("ImagemUpload").attr("data-val", "true");
        $("ImagemUpload").attr("data-val-required", "Preencha o campo Imagem");
    </script>
}